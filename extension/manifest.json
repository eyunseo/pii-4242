{
  "manifest_version": 3,
  "name": "4242 PII Guard",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle",
    "all_frames": true
  }],
  "web_accessible_resources": [{
    "resources": ["ui/*"],
    "matches": ["*://chat.openai.com/*", "*://chatgpt.com/*"]
  }],
  "action": { "default_popup": "popup.html" }
}
